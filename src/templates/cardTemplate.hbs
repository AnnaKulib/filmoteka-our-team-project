{{#each results}}
  <li class='item'>
    <div class='item__box'>
      <img
        class='item__img'
        id='{{id}}'
        src='https://image.tmdb.org/t/p/w500{{poster_path}}'
        alt='{{title}}'
      />
    </div>
    {{#if title}}
      <h2 class='item__title'>{{title}}</h2>
    {{/if}}
    <div class='wrapper'>
      <ul class='genres'>
        {{#each genre_ids}}
          <li class='genres__item'>
            {{this}}
          </li>
        {{/each}}
      </ul>
      <span class='item__year'>{{release_date}}</span>
      <span class='item__rating'>{{vote_average}}</span>
    </div>
  </li>
{{/each}}